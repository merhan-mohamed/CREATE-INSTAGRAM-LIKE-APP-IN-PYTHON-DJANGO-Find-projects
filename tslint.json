{
    "extends": [
        "tslint:recommended"
    ],
    "rulesDirectory": [
        "node_modules/codelyzer"
    ],
    "rules": {
        // Custom
        "trailing-comma": [false, {"multiline": "always", "singleline": "never"}],
        "interface-name": [false, "always-prefix"],
        // General
        "no-console": [true,
            "time",
            "timeEnd",
            "trace"
        ],
        "max-line-length": [
            true,
            150
        ],
        "max-classes-per-file": [false],
        "no-string-literal": false,
        "no-use-before-declare": true,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "new-parens": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "variable-name": [
            true,
            "allow-leading-underscore",
            "allow-pascal-case",
            "ban-keywords",
            "check-format"
        ],
        // Angular 2
        "angular-whitespace": [true, "check-interpolation", "check-semicolon"],
        "banana-in-box": true,
        "templates-no-negated-async": true,
        "directive-selector": [true, "attribute", "ib", "camelCase"],
        "component-selector": [true, "element", "ib", "kebab-case"],
        "use-input-property-decorator": true,
        "use-output-property-decorator": true,
        "use-host-property-decorator": true,
        "no-attribute-parameter-decorator": true,
        "no-input-rename": true,
        "no-output-rename": true,
        "no-output-on-prefix": true,
        "no-forward-ref": true,
        "use-view-encapsulation": false,
        "use-life-cycle-interface": true,
        "use-pipe-transform-interface": true,
        "pipe-naming": [true, "camelCase", "ib"],
        "component-class-suffix": false,
        "directive-class-suffix": true,
        "pipe-impure": true
    }
}
